<UserControl
    x:Class="TimeTableOne.View.Pages.DayPage.Controls.DayPageTable"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary Source="/Common/ColorDictionary.xaml"></ResourceDictionary>
    </UserControl.Resources>
    <Grid Background="{StaticResource TextBoxGray}" Width="{Binding Width}" Height="{Binding Hight}" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Stroke="{StaticResource TextBoxBorder}" Grid.ColumnSpan="3"/>
        <Button  Grid.Column="0" Command="{Binding TableClickedAction}" Content="Edit"/>
        <!--<TextBlock Grid.Column="1" Text="{Binding TableNumber}" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="80" />
        <TextBlock Grid.Column="2" Text="時限" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" />-->
    </Grid>
</UserControl>
