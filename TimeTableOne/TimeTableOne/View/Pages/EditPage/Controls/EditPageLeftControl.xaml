<UserControl
    x:Class="TimeTableOne.View.Pages.EditPage.Controls.EditPageLeftControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TimeTableOne.View.Pages.EditPage.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#FFE8E2E8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width= "1*"/>
            <ColumnDefinition Width= "5*"/>
            <ColumnDefinition Width= "1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height= "0*"/>
            <RowDefinition Height= "2*"/>
            <RowDefinition Height= "6*"/>
            <RowDefinition Height= "1*"/>
            <RowDefinition Height= "2*"/>
            <RowDefinition Height= "2*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="1" Grid.Row="1" 
                   x:Name="pageTitle" 
                   Text="{Binding ClassName}" 
                   Style="{StaticResource HeaderTextBlockStyle}" 
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                     IsHitTestVisible="false" 
                   Foreground="Black" 
                   FontFamily="メイリオ"/>
        <TextBox Grid.Column="1" Grid.Row="2" Background ="#f0edf3"
             HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
             TextWrapping="Wrap"
             AcceptsReturn="True"
             BorderBrush="#e0dade"
             Text="{Binding DetailText}">
        </TextBox>
        <Grid Grid.Column="1" Grid.Row="4">
            <Grid.RowDefinitions>
                <RowDefinition Height= "1*"/>
                <RowDefinition Height= "1*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0"
                   Foreground="Black"
                   Text="場所"
                   FontSize="36"
                   FontFamily="メイリオ"
                   HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <TextBox   Grid.Row="1" 
                   BorderBrush="#e0dade"
                   Foreground="Black"
                   Background="#f0edf3"
                   Text="ここに説明文を入力" FontFamily="Global User Interface"
                   />
        </Grid>
    </Grid>
</UserControl>
