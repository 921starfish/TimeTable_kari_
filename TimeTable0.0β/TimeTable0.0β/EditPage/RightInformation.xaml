<UserControl
    x:Class="TimeTable0._0β.EditPage.LeftInformation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TimeTable0._0β.EditPage"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid Background="Azure">
        <Grid.RowDefinitions>
            <RowDefinition Height= "1*"/>
            <RowDefinition Height= "2*"/>
            <RowDefinition Height= "1*"/>
        </Grid.RowDefinitions>
        <TextBox   Grid.Row="0"
                   Foreground="Black"
                   Text="タイトル"
                   FontWeight="Bold"/>
        <TextBox   Grid.Row="1" 
                   Foreground="Black"
                   Text="説明文:"
                   />
        <TextBox   Grid.Row="2" 
                   Foreground="Black"
                   Text="長めの文章"
                   />
    </Grid>
</UserControl>
